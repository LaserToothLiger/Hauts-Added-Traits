<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Psycast Expanded - Biotech Integration</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/VanillaPsycastsExpanded.PsycasterPathDef[defName="HVT_Mindbender"]</xpath>
                    <value>
                        <lockedReason>Mindbender gene</lockedReason>
                        <requiredGene>
                            <GeneDef>HVT_Gene_Mindbender</GeneDef>
                        </requiredGene>
                    </value>
                </li>
				<!--Genies, Highmates, regular Sanguos, various alpha xenotypes, Charmweavers, and Bruxa all have the Mindbender gene-->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/XenotypeDef[defName="Genie"]/genes</xpath>
					<value>
						<li>HVT_Gene_Mindbender</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/XenotypeDef[defName="Highmate"]/genes</xpath>
					<value>
						<li>HVT_Gene_Mindbender</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/XenotypeDef[defName="Sanguophage"]/genes</xpath>
					<value>
						<li>HVT_Gene_Mindbender</li>
					</value>
				</li>
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Alpha Genes</li>
					</mods>
					<match Class="PatchOperationSequence">
						<operations>
							<li Class="PatchOperationAdd">
								<xpath>/Defs/XenotypeDef[defName="AG_Animusen"]/genes</xpath>
								<value>
									<li>HVT_Gene_Mindbender</li>
								</value>
							</li>
							<li Class="PatchOperationAdd">
								<xpath>/Defs/XenotypeDef[defName="AG_Forsaken"]/genes</xpath>
								<value>
									<li>HVT_Gene_Mindbender</li>
								</value>
							</li>
							<li Class="PatchOperationAdd">
								<xpath>/Defs/XenotypeDef[defName="AG_MindDevourer"]/genes</xpath>
								<value>
									<li>HVT_Gene_Mindbender</li>
								</value>
							</li>
							<li Class="PatchOperationAdd">
								<xpath>/Defs/XenotypeDef[defName="AG_Taukai"]/genes</xpath>
								<value>
									<li>HVT_Gene_Mindbender</li>
								</value>
							</li>
						</operations>
					</match>
				</li>
				<li Class="PatchOperationFindMod">
					<mods>
						<li>ReSplice: Charmweavers</li>
					</mods>
					<match Class="PatchOperationSequence">
						<operations>
							<li Class="PatchOperationAdd">
								<xpath>/Defs/XenotypeDef[defName="RS_Charmweaver"]/genes</xpath>
								<value>
									<li>HVT_Gene_Mindbender</li>
								</value>
							</li>
						</operations>
					</match>
				</li>
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Vanilla Races Expanded - Sanguophage</li>
					</mods>
					<match Class="PatchOperationSequence">
						<operations>
							<li Class="PatchOperationAdd">
								<xpath>/Defs/XenotypeDef[defName="VRE_Bruxa"]/genes</xpath>
								<value>
									<li>HVT_Gene_Mindbender</li>
								</value>
							</li>
						</operations>
					</match>
				</li>
            </operations>
        </match>
    </Operation>

</Patch>