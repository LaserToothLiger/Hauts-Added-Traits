<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Biotech</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationConditional">
					<xpath>/Defs/ThingDef[defName="Mech_Apocriton"]/comps</xpath>
					<nomatch Class="PatchOperationAdd">
						<xpath>/Defs/ThingDef[defName="Mech_Apocriton"]</xpath>
						<value>
							<comps>
								<li Class="HautsTraitsRoyalty.CompProperties_TranscendNearbyOnDeath">
									<chance>0.04</chance>
									<radius>30.9</radius>
								</li>
							</comps>
						</value>
					</nomatch>
					<match Class="PatchOperationAdd">
						<xpath>/Defs/ThingDef[defName="Mech_Apocriton"]/comps</xpath>
						<value>
							<li Class="HautsTraitsRoyalty.CompProperties_TranscendNearbyOnDeath">
								<chance>0.04</chance>
								<radius>30.9</radius>
							</li>
						</value>
					</match>
				</li>
				<li Class="PatchOperationFindMod">
					<mods>
						<li>RPG Adventure Flavour Pack</li>
						<li>RPG Adventure Flavour Pack - Fork</li>
					</mods>
					<nomatch Class="PatchOperationSequence">
						<operations>
							<li Class="PatchOperationReplace">
								<xpath>Defs/TraitDef[defName = "HVT_TTraitApocriton"]/degreeDatas/li/description</xpath>
								<value>
									<description>{PAWN_nameDef} can exert a form of mind control on mechanoids. When {PAWN_pronoun} affects mechanoids with a psycast, they may become allied with {PAWN_objective} for up to an hour. The heavier the mech, the less likely this is to work.\n\nIn the absence of an active mechhive, archites in {PAWN_possessive} body will slowly synthesize various mechanoid chips.</description>
								</value>
							</li>
						</operations>
					</nomatch>
				</li>
			</operations>
		</match>
	</Operation>

</Patch>