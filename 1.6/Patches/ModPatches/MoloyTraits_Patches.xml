<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Moloy Traits (Continued)</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<!--Forgettable cannot have various unforgettable personalities, and Tranquil commands no-one to battle-->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/TraitDef[defName="MT_Charismatic" or defName="MT_Tyrant"]/conflictingTraits</xpath>
					<value>
						<li>HVT_Forgettable</li>
					</value>
				</li>
				<li Class="PatchOperationConditional">
					<xpath>/Defs/TraitDef[defName="MT_Conductor" or defName="MT_Luminary"]/conflictingTraits</xpath>
					<nomatch Class="PatchOperationAdd">
						<xpath>/Defs/TraitDef[defName="MT_Conductor" or defName="MT_Luminary"]</xpath>
						<value>
							<conflictingTraits>
								<li>HVT_Forgettable</li>
							</conflictingTraits>
						</value>
					</nomatch>
					<match Class="PatchOperationAdd">
						<xpath>/Defs/TraitDef[defName="MT_Conductor" or defName="MT_Luminary"]/conflictingTraits</xpath>
						<value>
							<li>HVT_Forgettable</li>
						</value>
					</match>
				</li>
				<li Class="PatchOperationConditional">
					<xpath>/Defs/TraitDef[defName="MT_Commander"]/conflictingTraits</xpath>
					<nomatch Class="PatchOperationAdd">
						<xpath>/Defs/TraitDef[defName="MT_Commander"]</xpath>
						<value>
							<conflictingTraits>
								<li>HVT_Tranquil</li>
								<li>HVT_Tranquil0</li>
								<li>HVT_Forgettable</li>
							</conflictingTraits>
						</value>
					</nomatch>
					<match Class="PatchOperationAdd">
						<xpath>/Defs/TraitDef[defName="MT_Commander"]/conflictingTraits</xpath>
						<value>
							<li>HVT_Tranquil</li>
							<li>HVT_Tranquil0</li>
							<li>HVT_Forgettable</li>
						</value>
					</match>
				</li>
				<!--Staid, as usual, exclusive w/ inspiration traits: in this case, Peppy & Volatile Crafter.-->
				<li Class="PatchOperationConditional">
					<xpath>/Defs/TraitDef[defName="MT_Peppy"]/conflictingTraits</xpath>
					<nomatch Class="PatchOperationAdd">
						<xpath>/Defs/TraitDef[defName="MT_Peppy"]</xpath>
						<value>
							<conflictingTraits>
								<li>HVT_Staid</li>
							</conflictingTraits>
						</value>
					</nomatch>
					<match Class="PatchOperationAdd">
						<xpath>/Defs/TraitDef[defName="MT_Peppy"]/conflictingTraits</xpath>
						<value>
							<li>HVT_Staid</li>
						</value>
					</match>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/TraitDef[defName="MT_Volatile_Crafter"]/conflictingTraits</xpath>
					<value>
						<li>HVT_Staid</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>