<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Synergistic Traits</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<!--Tranquil, as usual, exclusive w/ combat traits-->
				<li Class="PatchOperationConditional">
					<xpath>/Defs/TraitDef[defName="SN_crackshot"]/conflictingTraits</xpath>
					<nomatch Class="PatchOperationAdd">
						<xpath>/Defs/TraitDef[defName="SN_crackshot"]</xpath>
						<value>
							<conflictingTraits>
								<li>HVT_Tranquil</li>
								<li>HVT_Tranquil0</li>
							</conflictingTraits>
						</value>
					</nomatch>
					<match Class="PatchOperationAdd">
						<xpath>/Defs/TraitDef[defName="SN_crackshot"]/conflictingTraits</xpath>
						<value>
							<li>HVT_Tranquil</li>
							<li>HVT_Tranquil0</li>
						</value>
					</match>
				</li>
				<li Class="PatchOperationConditional">
					<xpath>/Defs/TraitDef[defName="SN_accurateShooter"]/conflictingTraits</xpath>
					<nomatch Class="PatchOperationAdd">
						<xpath>/Defs/TraitDef[defName="SN_accurateShooter"]</xpath>
						<value>
							<conflictingTraits>
								<li>HVT_Tranquil</li>
								<li>HVT_Tranquil0</li>
							</conflictingTraits>
						</value>
					</nomatch>
					<match Class="PatchOperationAdd">
						<xpath>/Defs/TraitDef[defName="SN_accurateShooter"]/conflictingTraits</xpath>
						<value>
							<li>HVT_Tranquil</li>
							<li>HVT_Tranquil0</li>
						</value>
					</match>
				</li>
				<li Class="PatchOperationConditional">
					<xpath>/Defs/TraitDef[defName="SN_swordsman"]/conflictingTraits</xpath>
					<nomatch Class="PatchOperationAdd">
						<xpath>/Defs/TraitDef[defName="SN_swordsman"]</xpath>
						<value>
							<conflictingTraits>
								<li>HVT_Tranquil</li>
								<li>HVT_Tranquil0</li>
							</conflictingTraits>
						</value>
					</nomatch>
					<match Class="PatchOperationAdd">
						<xpath>/Defs/TraitDef[defName="SN_swordsman"]/conflictingTraits</xpath>
						<value>
							<li>HVT_Tranquil</li>
							<li>HVT_Tranquil0</li>
						</value>
					</match>
				</li>
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Royalty</li>
					</mods>
					<match Class="PatchOperationSequence">
						<operations>
							<li Class="PatchOperationConditional">
								<xpath>/Defs/TraitDef[defName="SN_Gifted1"]/conflictingTraits</xpath>
								<nomatch Class="PatchOperationAdd">
									<xpath>/Defs/TraitDef[defName="SN_Gifted1"]</xpath>
									<value>
										<conflictingTraits>
											<li>HVT_PsychicallyBlank</li>
										</conflictingTraits>
									</value>
								</nomatch>
								<match Class="PatchOperationAdd">
									<xpath>/Defs/TraitDef[defName="SN_Gifted1"]/conflictingTraits</xpath>
									<value>
										<li>HVT_PsychicallyBlank</li>
									</value>
								</match>
							</li>
							<li Class="PatchOperationConditional">
								<xpath>/Defs/TraitDef[defName="SN_Gifted2"]/conflictingTraits</xpath>
								<nomatch Class="PatchOperationAdd">
									<xpath>/Defs/TraitDef[defName="SN_Gifted2"]</xpath>
									<value>
										<conflictingTraits>
											<li>HVT_PsychicallyBlank</li>
										</conflictingTraits>
									</value>
								</nomatch>
								<match Class="PatchOperationAdd">
									<xpath>/Defs/TraitDef[defName="SN_Gifted2"]/conflictingTraits</xpath>
									<value>
										<li>HVT_PsychicallyBlank</li>
									</value>
								</match>
							</li>
						</operations>
					</match>
				</li>
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Ideology</li>
					</mods>
					<match Class="PatchOperationSequence">
						<operations>
							<li Class="PatchOperationConditional">
								<xpath>/Defs/TraitDef[defName="SN_PrisonGuard"]/conflictingTraits</xpath>
								<nomatch Class="PatchOperationAdd">
									<xpath>/Defs/TraitDef[defName="SN_PrisonGuard"]</xpath>
									<value>
										<conflictingTraits>
											<li>HVT_Liberator</li>
										</conflictingTraits>
									</value>
								</nomatch>
								<match Class="PatchOperationAdd">
									<xpath>/Defs/TraitDef[defName="SN_PrisonGuard"]/conflictingTraits</xpath>
									<value>
										<li>HVT_Liberator</li>
									</value>
								</match>
							</li>
							<li Class="PatchOperationConditional">
								<xpath>/Defs/TraitDef[defName="SN_Priest"]/conflictingTraits</xpath>
								<nomatch Class="PatchOperationAdd">
									<xpath>/Defs/TraitDef[defName="SN_Priest"]</xpath>
									<value>
										<conflictingTraits>
											<li>HVT_Doubtful</li>
										</conflictingTraits>
									</value>
								</nomatch>
								<match Class="PatchOperationAdd">
									<xpath>/Defs/TraitDef[defName="SN_Priest"]/conflictingTraits</xpath>
									<value>
										<li>HVT_Doubtful</li>
									</value>
								</match>
							</li>
						</operations>
					</match>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>